{
  "version": 2,
  "scope": "Thesis",
  "alias": ["Database TCC"],
  "env": {
    "MONGODB_URI":"mongodb+srv://Deploy:Luanny2509!@cluster0.dsehz.mongodb.net/test",

    "MONGODB_COLLECTION": "results",
    "BASE_URL": "http://localhost:3000/"
  },
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/now-builder",
      "config": {
        "serverFiles": [
          "content/**"
        ]
      }
    },
    {
      "src": "api/*.js",
      "use": "@now/node"
    }
  ],
  "rewrites": [
    {"source": "/api/result/:id/:lang","destination": "/api/result.js"},
    {"source": "/api/result/:id","destination": "/api/result.js"},
    {"source": "/api/compare/:id","destination": "/api/compare.js"},
    {"source":"/api/save","destination":"/api/save.js"},
    {"source": "/api/(.*)","destination": "/api/$1.js"},
    {"source": "/service-worker.js","destination": "/sw.js"}
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers" : [
        {
          "key" : "Access-Control-Allow-Origin",
          "value" : "*"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Accept, Access-Control-Request-Headers, Access-Control-Request-Method, Authorization, Content-Type, Last-Modified, Origin, X-FusionAuth-TenantId, X-Requested-With"
        }
      ]
    }
  ]
}
